# i3status configuration file.
general {
				output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "run_watch DHCP"
order += "battery all"
order += "load"
order += "memory"
order += "tztime local"

cpu_usage {
        format = "CPU %usage"
}

load {
        format = "load %1min"
        max_threshold = 3
}

disk "/" {
        format = "⛁ %avail free"
}

wireless _first_ {
				format_up = "Wifi: %essid (%quality, %bitrate) %ip"
				format_down = " Wifi non connecté "
}

ethernet _first_ {
        format_up = "eth: %ip %speed"
        format_down = "pas d'adresse"
}

battery all {
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "⚡"
        status_bat = ""
        status_unk = "--"
        status_full = "☻"
        color_bad = "#EF6E75"
        low_threshold = 15
        threshold_type = percentage
}

memory {
        format = "RAM %used/%available"
        threshold_degraded = "1G"
        format_degraded = "LOW MEMORY %available"
}

tztime local {
        format = "%d/%m/%Y %H:%M "
}
